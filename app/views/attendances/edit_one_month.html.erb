<% provide(:title, '@user.name') %>

<div>
  <table class= "table table-condensed table-bordered", id= "table-attendances">
    <thead>
      <tr>
        <th>日付</th>
        <th>曜日</th>
        <th>出社</th>
        <th>退社</th>
        <th>在社時間</th>
        <th>備考</th>
        <th>残業指示</th>
        <th>指示者</th>
      </tr>
      <% @attendances.each do |day| %>
      <tr>
        <td><%= l(day.worked_on, format: :short) %></td>
        <td><%= $days_of_the_week[day.worked_on.wday] %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <% end %>
    </thead>
  </table>
</div>