<% provide(:title, 'ユーザ一覧') %>

<h1>ユーザ一覧</h1>
  
  <div class = "col-md-12">
    <%= will_paginate %>
    <table class= "table table-condensed table-hover" id= "table-users">
      <thead>
        <tr>
          <th>Example</th>
        </tr>
      </thead>
      
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
        </tr>
      <% end %>
    </table>
    <%= will_paginate %>
  </div>